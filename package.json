{
  "name": "mongodb-nodejs-examples",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "code:check": "npm run format:check && npm run lint:check",
    "code:fix": "npm run format && npm run lint:fix",
    "load-env": "bash ./scripts/load-env.sh",
    "run:quickstart": "bash -c 'source ./scripts/load-env.sh && cd 001-quickstart && node index.js'",
    "run:connection": "bash -c 'source ./scripts/load-env.sh && cd 101-client-connection-string && node index.js'"
  },
  "workspaces": [
    "001-quickstart",
    "101-client-connection-string",
    "200-admin",
    "201-does-database-exist",
    "202-get-doc-count",
    "203-insert-doc",
    "225-get-collection-indexes",
    "250-upsert-doc",
    "251-bulk_write",
    "252-insert-many",
    "275-find",
    "280-aggregation",
    "290-delete-doc",
    "299-drop-collection",
    "300-drop-database"
  ],
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "prettier": "^3.5.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "mongodb": "^6.17.0"
  }
}
